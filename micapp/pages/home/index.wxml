<view>
  <van-notice-bar left-icon="volume-o" text="在代码阅读过程中人们说脏话的频率是衡量代码质量的唯一标准。" color="#545454" background="rgb(69, 170, 66, 0.2)" />
  <view class="user_list panel">
    <view class="panel_header">
      <view class="panel_header_title">常用就诊人</view>
    </view>
    <view class="user_list_body">
      <view class="user_list_body_item">
        <view class="user_list_body_item_header">
          <van-image width="24px" height="24px" fit="contain" src="/images/nanren.png" />
        </view>
        <view class="user_list_body_item_name">张三</view>
        <view class="user_list_body_item_relation">本人</view>
        <view class="user_list_body_item_icon man">
          <van-image width="20px" height="20px" fit="contain" src="/images/nanrenicon.svg" />
        </view>
      </view>
      <view class="user_list_body_item">
        <view class="user_list_body_item_header">
          <van-image width="24px" height="24px" fit="contain" src="/images/nvren.png" />
        </view>
        <view class="user_list_body_item_name">张三</view>
        <view class="user_list_body_item_relation">本人</view>
        <view class="user_list_body_item_icon women">
          <van-image width="20px" height="20px" fit="contain" src="/images/nvrenicon.svg" />
        </view>
      </view>
      <view class="user_list_body_item add_btn" bindtap="gotoAddPatient">
        <van-icon name="plus" />
        <text>添加</text>
      </view>
    </view>
  </view>

  <view class="hospital_list">
    <view class="hospital_list_header">
      <view class="hospital_list_header_title">合作医疗机构</view>
      <view class="hospital_list_header_link">
      更多
      <image src="/images/right.png"  class="hospital_list_header_link_icon" mode=""/>
      </view>
    </view>
  </view>
  <van-cell-group inset>
    <van-cell title-class="hospital_list_body_item" is-link>
      <view class="hospital_list_body_item" slot="title">
        <view class="hospital_list_body_item_image">
          图片
        </view>
        <view class="hospital_list_body_item_info">
          <view class="hospital_list_body_item_info_name">莆田医院</view>
          <view class="hospital_list_body_item_info_descriptions">莆田医院</view>
          <view class="hospital_list_body_item_info_address">莆田医院</view>
        </view>
      </view>
    </van-cell>
    <van-cell title-class="hospital_list_body_item" is-link>
      <view class="hospital_list_body_item" slot="title">
        <view class="hospital_list_body_item_image">
          图片
        </view>
        <view class="hospital_list_body_item_info">
          <view class="hospital_list_body_item_info_name">莆田医院</view>
          <view class="hospital_list_body_item_info_descriptions">莆田医院</view>
          <view class="hospital_list_body_item_info_address">莆田医院</view>
        </view>
      </view>
    </van-cell>
  </van-cell-group>

</view>