<!--pages/my/index.wxml-->
<view>
  <view class="login" wx:if="{{loginState}}">
    <view class="header" >
      <view class="user_panel">
        <view class="user_panel_icon">
          <view class="user_panel_icon_border">
            <view class="user_panel_icon_image">
            <van-image width="68px" height="68px" fit="contain" src="/images/default.png" />
            </view>
          </view>
        </view>
        <view class="user_panel_info">
          <view class="user_panel_info_name">
            <text>{{userInfo.nickname || userInfo.username || '未设置昵称'}}</text>
          </view>
          <view class="user_panel_info_phone">
            <text>绑定手机号：{{userInfo.phone || '未绑定手机号'}}</text>
          </view>
        </view>
        <view>
        <van-image width="24px" height="24px" fit="contain" src="/images/setting.svg" />
        </view>
      </view>
    </view>
    <view class="user_list panel">
      <view class="panel_header">
        <view class="panel_header_title">常用健康卡</view>
        <view class="panel_header_link" bind:tap="gotoPatientList">
        更多
        </view>
      </view>
      <view class="user_list_body">
        <view class="user_list_body_item" wx:for="{{patientList}}" wx:key="id">
          <view class="user_list_body_item_header">
            <van-image width="24px" height="24px" fit="contain" src="{{item.gender === 1 ? '/images/nanren.png' : '/images/nvren.png'}}" />
          </view>
          <view class="user_list_body_item_name">{{item.name}}</view>
          <view class="user_list_body_item_relation">{{item.relationStr}}</view>
          <view class="user_list_body_item_icon {{item.gender === 1 ? 'man' : 'women'}}">
            <van-image width="20px" height="20px" fit="contain" src="{{item.gender === 1 ? '/images/nanrenicon.svg' : '/images/nvrenicon.svg'}}" />
          </view>
        </view>
        <view class="user_list_body_item add_btn" bind:tap="gotoAddPatient">
          <van-icon name="plus" />
          <text>添加</text>
        </view>
      </view>
    </view>
    <view class="tools_list panel">
      <view class="panel_header">
        <view class="panel_header_title">工具</view>
      </view>
      <view class="tools_list_body">
        <view class="tools_list_body_item" bind:tap="gotoRecord">
          <view class="tools_list_body_item_icon">
            <image src="/images/record.svg"/>
          </view>
          <view class="tools_list_body_item_label">
            记录
          </view>
        </view>
        <view class="tools_list_body_item" bind:tap="gotoReport">
          <view class="tools_list_body_item_icon">
            <image src="/images/report.svg" />
          </view>
          <view class="tools_list_body_item_label">
            报告
          </view>
        </view>
        <view class="tools_list_body_item" bind:tap="gotoVideo">
          <view class="tools_list_body_item_icon">
          <image src="/images/video.svg" />
          </view>
          <view class="tools_list_body_item_label">
            视频
          </view>
        </view>
      </view>
    </view>
    <!-- <view class="notice_card">
      <van-notice-bar left-icon="volume-o" text="在代码阅读过程中人们说脏话的频率是衡量代码质量的唯一标准。" background="#F5EDED" custom-class="notice_bar" />
    </view> -->

  </view>
</view>