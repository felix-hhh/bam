<!--pages/my/patient.wxml-->
<view class="container">
  <van-cell-group>
    <van-field label="姓名" placeholder="请输入姓名" value="{{formData.name}}" bind:change="onInputName" input-align="right" />
    <van-field value="{{ formData.genderLabel }}" is-link readonly label="性别" placeholder="请选择性别" bind:tap="showGenderPopup" input-align="right" />
    <van-field label="身份证号" value="{{formData.idCard}}" bind:change="onInputIdCard" placeholder="请输入身份证号码" input-align="right" />
    <van-field value="{{ formData.relationLabel }}" is-link readonly label="与账户人关系" placeholder="请选择关系" bind:tap="showRelation" input-align="right" />
    <view class="form_item">
    <view class="form_item_body">
      <view class="form_item_body_label">手机号码</view>
      <view class="form_item_body_area" bind:tap="showArea">
        <text>{{formData.areaLabel}}</text>
        <image src="/images/down.svg" alt="下" class="form_item_body_area_icon" />
      </view>
      <van-field border="{{false}}" class="form_item_body_phone" placeholder="请输入手机号码" value="{{formData.phone}}" bind:change="onInputPhone" input-align="right" />
    </view>
    </view>
    <van-field value="{{ formData.birthday }}" is-link readonly label="生日" placeholder="请选择生日" bind:tap="showBirthdayPopup" input-align="right" />
    <view class="form_item">
      <view class="form_item_body">
      <view class="form_item_body_label">设为默认就诊人</view>
      <van-checkbox value="{{ formData.defaultPatient }}" bind:change="onDefaultPatient">
      </van-checkbox>
      </view>
    </view>
  </van-cell-group>
  <van-checkbox value="{{ formData.agree }}" bind:change="onAgree">
    我已阅读并同意《康力得敏感个人信息授权书》
  </van-checkbox>
  <van-button block type="primary" bind:tap="submitForm">添加</van-button>

  <van-action-sheet show="{{ genderShow }}" actions="{{ genderColumns }}" bind:close="closePopup" title="请选择性别" bind:select="onSelectGender" />
  <van-action-sheet show="{{ relationShow }}" actions="{{ relationColumns }}" bind:close="closePopup" title="请选择关系" bind:select="onSelectRelation" />
  <van-action-sheet show="{{ areaShow }}" actions="{{ areaColumns }}" bind:close="closePopup" title="请选择区号" bind:select="onSelectArea" />
  <van-popup show="{{ birthdayShow }}" position="bottom" round bind:close="closePopup">
    <van-datetime-picker
      type="date"
      value="{{ currentDate }}"
      min-date="{{ minDate }}"
      max-date="{{ maxDate }}"
      bind:confirm="onBirthdayConfirm"
      bind:cancel="closePopup"
    />
  </van-popup>
</view>